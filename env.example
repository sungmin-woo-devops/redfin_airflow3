# ===== 공통 =====
TZ=Asia/Seoul
COMPOSE_PROJECT_NAME=redfin_airflow3

# ===== 호스트 UID/GID (WSL2 또는 리눅스 호스트 사용자 값으로 교체 권장) =====
AIRFLOW_UID=50000
AIRFLOW_GID=0

# ===== Airflow Core =====
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=changeme
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__SCHEDULER__STANDALONE_DAG_PROCESSOR=true
AIRFLOW__API__SECRET_KEY=changeme
AIRFLOW__WEBSERVER__SECRET_KEY=changeme

_AIRFLOW_WWW_USER_CREATE=true
_AIRFLOW_WWW_USER_USERNAME=redfin
_AIRFLOW_WWW_USER_PASSWORD=changeme

AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=

# ===== Airflow 3.0 신규(권장) =====
# 참고: 3.0부터 단일 schedule 필드 / Assets 모델 사용. 여기선 런타임 플래그 예시만.
AIRFLOW__DEBUG__SQLALCHEMY_ECHO=false

# ===== Postgres (메타DB) =====
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# ===== 포트 =====
AIRFLOW_WEB_PORT=18080
POSTGRES_PORT=15432

# ===== MongoDB =====
MONGO_URI=mongodb://redfin:changeme@mongodb:27017/redfin?authSource=admin

# ===== RSS Feeds =====
RSS_FEEDS_YAML=/opt/airflow/dags/config/rss_feeds.yaml

# ===== Redfin 외부 시스템 예시 (옵션) =====
# MONGO_URI=mongodb://redfin:password@mongodb:27017/redfin?authSource=admin
# QDRANT_URL=http://qdrant:6333
